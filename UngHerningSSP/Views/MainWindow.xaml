<Window
	x:Class="UngHerningSSP.Views.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:UngHerningSSP"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModels="clr-namespace:UngHerningSSP.ViewModels"
	xmlns:views="clr-namespace:UngHerningSSP.Views"
	Title="MainWindow"
	Width="1920"
	Height="1080"
	WindowStartupLocation="CenterScreen"
	WindowState="Maximized"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Frame Background="Aqua" />
		<Frame
			Grid.Row="1"
			Content="{Binding CurrentViewModel}"
			NavigationUIVisibility="Hidden">
			<Frame.Resources>
				<DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
					<views:LoginView />
				</DataTemplate>
				<DataTemplate DataType="{x:Type viewModels:UserMapViewModel}">
					<views:UserMapView />
				</DataTemplate>
				<DataTemplate DataType="{x:Type viewModels:UserObservationsViewModel}">
					<views:UserObservationsView />
				</DataTemplate>
			</Frame.Resources>
		</Frame>
	</Grid>
</Window>
